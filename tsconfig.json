{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "noImplicitAny": false,
    "moduleDetection": "force",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/typings.d.ts"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules"]
}
